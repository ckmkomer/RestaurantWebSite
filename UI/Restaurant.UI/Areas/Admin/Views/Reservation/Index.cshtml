@using Restaurant.UI.Dtos.ReservationDtos
@model List<ResultReservationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Reservasyon ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Rezarvosyon Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@if(Model!=null)
								{
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th>@count</th>
											<td>@item.Name</td>
											<td>@item.Phone</td>
											<td>@item.PersonCount/td>
											<td>Rezarvasyon Alındı</td>
											<td><a href="/Reservation/DeleteRservation/@item.Id" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Reservation/UpdateReservation/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}
								}

								


							</tbody>
						</table>
						<a href="/Admin/Reservation/CreateReservation/" class="btn btn-outline-primary">Yeni Rezarvosyon işlemi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

