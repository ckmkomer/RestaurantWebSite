@using Restaurant.UI.Dtos.CategoryDtos
@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlmleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post"> 
					<input type="hidden" asp-for="Id"
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Kategori Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Kategori adını giriniz.</label>
								<input type="text" class="form-control" asp-for="Name" id="categoryname" />
							
						</div>
					
					</div>
					<div class="card-action">
						<button class="btn btn-success">Ekle</button>
						
					</div>
				</div>
				</form>
			</div>
			
		</div>
	</div>
</div>

